<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todone</title>
    <link rel="icon" href="data:,">
    <link rel="stylesheet" href="https://unpkg.com/@picocss/pico@latest/css/pico.min.css">
    <link rel="stylesheet" href="css/style.css">
    <script src="https://kit.fontawesome.com/ddd77854d8.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/js-confetti@latest/dist/js-confetti.browser.js"></script>
    
</head>
<body>


<main class="container">
  
    <h1>Todos</h1>
    <form action="/todos/createTodo" method='POST'>
      <input type="text" placeholder="Enter Todo Item" name='todoItem'>
      <input type="submit">
    </form>
    /* julian start */
    <table>
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Todo</th>
                <th scope="col">Edit/Save</th>
                <th scope="col">Delete</th>
                <th scope="col">Complete</th>
            </tr>
        </thead>
        <tbody>
            <% todos.forEach( (el, idx) => { %>
                <tr class='todoItem'>
                    <th scope="row"><%= idx + 1%></td>
                    <td>
                        <span class='<%= el.completed === true ? 'completed' : 'not content' %>'><%= el.todo %></span>
                    </td>
                    <td>
                        <span class="fa-solid fa-pen-to-square edit" role="img" aria-label="Edit"></span>
                        <span class="fa-solid fa-save save" role="img" aria-label="Save"></span>
                    </td>
                    <td>
                        <span class="fa-solid fa-trash-can del" role="img" aria-label="Delete"></span>
                    </td>
                    <td>
                        <span class="fa-sharp fa-solid fa-check check" role="img" aria-label="Check"></span>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    /* julian end */
    <ul>
        <% todos.forEach( el => { %>

        <li class='todoItem' data-id='<%=el._id%>'>
            <span class='<%= el.completed === true ? 'completed' : 'not content' %>'><%= el.todo %></span>

            <span class="fa-solid fa-pen-to-square edit" role="img" aria-label="Edit"></span>

            <span class="fa-solid fa-save save" role="img" aria-label="Save"></span>

            <span class="fa-solid fa-trash-can del" role="img" aria-label="Delete"></span>

            <span class="fa-sharp fa-solid fa-check check" role="img" aria-label="Check"></span>
        </li>
        <% }) %>
    </ul>
  
          <h2 class="itemsLeft"><%= user.userName %> has <%= left %> things left to do.</h2>
      <a href="/logout">Logout</a>
</main>

    
    <script src="js/main.js"></script>
</body>
</html>

