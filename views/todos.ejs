<!-- @format -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todone</title>
    <link rel="icon" href="data:,">
    <link rel="stylesheet" href="https://unpkg.com/@picocss/pico@latest/css/pico.min.css">
    <link rel="stylesheet" href="css/style.css">
    <script src="https://kit.fontawesome.com/ddd77854d8.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/js-confetti@latest/dist/js-confetti.browser.js"></script>
  </head>

  <body>

  <main class="container">
    
    <nav>
      <h1><a href="/todos">Todos</a></h1>
      <div class="user-info">
        <details role="list" dir="rtl">
          <summary aria-haspopup="listbox" role="link"><%= user.userName %></summary>
          <ul role="listbox">
            <li onclick="toggleLightDark()"><a href="#"><span class="theme"></span> theme</a></li>
            <li><a><hr></a></li>
            <li><a href="/logout">Log out</a></li>
          </ul>
        </details>
      </div>
    </nav>
    <form action="/todos/createTodo" method='POST'>
      <input type="text" placeholder="Enter Todo Item" name='todoItem'>
      <input type="submit">
    </form>
    <section>
      <div class="progress">
        <div class="nums">
          <%= total - left %> / <%= total %>
        </div>
        <div class="bar">
          <progress value="<%= total - left %>" max="<%= total %>"></progress>
        </div>
      </div>
    </section>
    <section class="list">
      <% todos.forEach( (el, idx) => { %>
        <div class="task <%= el.completed === true ? 'todo-completed' : '' %>" data-id='<%=el._id%>'>
          <div class="task-name"><%= el.todo %></div>
          <!-- <div class="task-description">lorem ipsum dolor amet</div> -->
          <div class="buttons">
            <div class="button edit">
              <span class="fa-solid fa-pen-to-square icon" role="img" aria-label="Edit"></span>
            </div>
            <div class="button save">
              <span class="fa-solid fa-save icon" role="img" aria-label="Save"></span>
            </div>
            <div>
              <!-- Selects whichever priority levels exists in the databse for that task -->
              <select class="priority" name="priority" form="priorityForm">
                <option value="urgent" <%= el.priority == 'urgent' ? 'selected' : ''%>>Urgent</option>
                <option value="Normal" <%= el.priority == 'Normal' ? 'selected' : ''%>>Normal</option>
                <option value="noRush" <%= el.priority == 'noRush' ? 'selected' : ''%>>No Rush</option>
            </select>
            <!-- Wrapping the select in a form causes a line break so it must be outside the form element -->
            <form id="priorityForm"></form>
            </div>
            <div class="button delete">
              <span class="fa-solid fa-trash-can icon" role="img" aria-label="Delete"></span>
            </div>
            <div class="button check">
              <span class="fa-sharp fa-solid fa-check icon" role="img" aria-label="Check"></span>
            </div>
          </div>
      </div>
       
      <% }) %>
    </section>
        
  </main>

      
    <script src="js/main.js"></script>
  </body>
</html>
